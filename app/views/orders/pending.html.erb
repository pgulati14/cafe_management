<article>
  <section class="OrderBill">
    <% @orders.all.each do |order| %>
      <%= form_with url: order_path(order.id), method: "put", class: "OrderBillItem" do |form| %>
      <div style="display:flex;justify-content:space-between;">
      <p style="text-align:center;font-size:30px;padding:20px;">Order-Id: <%= order.id %> </p>
      <% user = Order.find(order.id).user %>
      <p style="text-align:center;font-size:30px;padding:20px;">User: <%= user.first_name.to_s + " " + user.last_name.to_s %> </p>
      </div>
      <div class="Orders">
        <% count = 1 %>
        <p class="HeaderFont">S.No</p>
        <p class="HeaderFont">Item</p>
        <p class="HeaderFont">Price</p>
        <p class="HeaderFont">Quantity</p>
        <p class="HeaderFont">Total Price</p>
          <% order.order_items.each do |order_item| %>
            <p> <%= count %> </p>
            <p> <%= order_item.menu_item_name %> </p>
            <p> &#x20b9;<%= order_item.menu_item_price %> </p>
            <p style="text-align:center;"> <%= order_item.quantity %> </p>
            <p>&#x20b9;<%= order_item.price %> </p>
            <% count = count + 1 %>
          <% end %>
      </div>
      <p style="position: relative;left: 38%; padding:10px;">Total Price: &#x20b9;<%= order.total_price %> </p>
      <%= submit_tag "Mark as Delivered", data: { confirm: "Are you sure?" }, class: "Table-button Pending-button" %>
      <% end %>
    <% end %>
  </section>
</article>
